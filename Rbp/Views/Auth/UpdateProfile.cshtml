
@{
    ViewBag.Title = "Update Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content bg-white m-10">
    <br />
    <br />

    <div class="row" style="height:700px;">
        <form action="@Url.Action("PostUpdateProfile", "Auth")" method="post">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">

                    <div class="panel panel-flat">
                        <div class="panel-heading">
                            <h3 class="text-bold text-center"><u>Update Profile</u></h3>

                        </div>

                        <div class="panel-body">


                            <input type="hidden" class="form-control" required name="Id" placeholder="" value="@ViewBag.User.Id">
                            <div class="form-group">
                                <label class="text-bold">First Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" required name="FirstName" placeholder="Please Enter your First Name Here" value="@ViewBag.User.FirstName">
                            </div>                            
                            <div class="form-group">
                                <label class="text-bold">Middle Name </label>
                                <input type="text" class="form-control" name="MiddleName" placeholder="Please Enter your Middle Name Here" value="@ViewBag.User.MiddleName">
                            </div>                      
                            <div class="form-group">
                                <label class="text-bold">Last Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" required name="LastName" placeholder="Please Enter your Last Name Here" value="@ViewBag.User.LastName">
                            </div>

                            <div class="form-group">
                                <label class="text-bold">Contact</label>
                                <input type="text" class="form-control" onkeypress="isInputNumber(event)" name="Contact" placeholder="Please Enter your Contact Number" value="@ViewBag.User.Contact">
                            </div>

                            <div class="form-group">
                                <label class="text-bold">Email <span class="text-danger">*</span></label>
                                <input type="email" onkeyup="validateEmail(this.value)" class="form-control" required name="Email" placeholder="Please Enter your Email" value="@ViewBag.User.Email">
                                <span class="text-danger" id="updErrMsg"></span>
                            </div>


                            <div class="text-right">
                                <button type="submit" id="updSubBtn" class="btn btn-primary">Update <i class="icon-database-insert position-right"></i></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>

</div>

<script>

    function validateEmail(email) {
        var id = '@ViewBag.User.Id';


        if (email != "") {
            $.ajax({
                type: 'POST',
                url: "../Ajax/ValidateEmail",
                dataType: "json",
                data:
                {
                    email: email, id: id
                },
                success: function (response)
                {
                    if (response == true)
                    {
                        $('#updErrMsg').text("");
                        $('#updSubBtn').prop('disabled', false);
                    }
                    else {
                        $('#updErrMsg').text("Duplicate Email");
                        $('#updSubBtn').prop('disabled', true);
                    }
                },
                error: function ()
                {
                    $('#updErrMsg').text("");
                    $('#updSubBtn').prop('disabled', false);
                    alert("Email Validation Ajax Failed");
                }
            });
        }

    }

</script>

